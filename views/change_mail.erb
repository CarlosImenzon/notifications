<div class="container standard-container">  <!--Estilo defininido-->
    <div class="col-md-6 standard-form-2">  
        <center><h4 class="text-white">Cambiar Email</h4></center>
        <form method="POST" action="/change_mail">  <!--Se define la forma de enviar los datos-->
            <% if flash[:error_message]%> <!--Se notifica en caso de algun error-->
                <p><%= flash[:error_message] %></p>
            <% end %>
            <div class="form-group">    <!--se ingresa el correo nuevo-->
                <center><input type="text" class="form-control" name="email1" placeholder="Nuevo Email" /></center>
            </div>
            <div class="form-group">    <!--se ingresa la confirmacion del correo nuevo-->
                <center><input type="text" class="form-control"  name="email2" placeholder="Confirmar Email" /></center>
            </div>
            <div class="profilebtn .btnSubmit">     <!--Confirmacion-->
                <center><input type="submit" class="btnSubmit" value="Confirmar" /></center>
            </div>
            <div class="form-group"></div>
        </form>
        </div>
    </div>
