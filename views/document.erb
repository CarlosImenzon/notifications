<div class="container">
	<h3>Nuevo Documento</h3>
		<form action="/document" method="POST" enctype="multipart/form-data">
			<div class="form-group">
			    <input type="text" name="title" class="form-control" placeholder="Titulo">
  			</div>
  			<div class="form-group">
			    <input type="text" name="topic" class="form-control" placeholder="Tema">
  			</div>
  			<div class="form-group">
		    <input type="file" name="fileInput" accept= ".pdf, .jpg, .jpeg, .png" class="form-control-file">
		  	</div>
            <br>
			<div class="form-group">
			</br>
		    <label for="exampleFormControlSelect2">Seleccionar usuarios</label>
		    <select multiple class="form-control" name="multi_select[]" id="exampleFormControlSelect2">
					<% @users.each do |u| %>
  					<option value='<%=u.id%>'>
							<%=u.username%>
						</option>
   				<%end%>
   			</select>
			</div>
			</br>
			<button type="submit" class="btn btn-primary">Crear Documento</button>
		</form>
</div>