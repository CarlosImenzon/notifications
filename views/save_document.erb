<div class="container standard-container">
    <div class="col-md-6 standard-form-2"> <!--Se define el estilo del cargar documento-->
			<div class="container">
				<center><h2 class="text-white">Nuevo Documento</h2></center>
				<br>
					<!--Se define la forma de enviar los datos-->
					<% if flash[:error_message] %> <!--Se notifica en caso de algun error-->
                		<p><%= flash[:error_message] %></p>
            		<% end %>
					<form id="form" action="/save_document" method="POST" enctype="multipart/form-data">
						<!--Se solicita informacion necesaria para la carga-->
						<div class="form-group">	
						    <input name="title" type="text" class="form-control" placeholder="Titulo">
			  			</div>
			  			<div class="form-group">
						    <input name="topic" type="text" class="form-control" placeholder="Tema">
			  			</div>
			  			<div class="form-group">
					    <input name="fileInput" type="file" accept= ".pdf, .jpg, .jpeg, .png" class="form-control-file"> <!--Tipos de documentos disponibles para cargar-->
					  	</div>
					  	<!--taggers-->
					    <label class="text-white" for="exampleFormControlSelect2">Seleccionar usuarios</label>
					    <select id="input" multiple class="form-control" name="multi_select[]" id="exampleFormControlSelect2">
								<% @users.each do |u| %>	<!--Se lista todos los usuarios cargados-->
			  					<option value='<%=u.id%>'>
										<%=u.username%>
									</option>
			   				<%end%>
			   			</select>
						</div>
						</br>
						<!--Confirmacion para subir documento-->
						<center><button type="submit" class="btn btn-primary">Crear Documento</button></center>
					</form>
		    </div>
	</div>
</div>
